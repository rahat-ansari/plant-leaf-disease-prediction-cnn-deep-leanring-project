{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Streamlit: Run App",
      "type": "python",
      "request": "launch",
      "module": "streamlit",
      "args": [
        "run",
        "main.py"
      ],
      "env": {
        "PYTHONUNBUFFERED": "1"
      },
      "cwd": "${workspaceFolder}/app"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "cwd": "${workspaceFolder}/app"
    }
  ]
}